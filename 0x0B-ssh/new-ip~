#!/usr/bin/env bash

# Check if the script is provided with the correct number of arguments
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 NEW_IP_ADDRESS"
    exit 1
fi

# Accessing argument
NEW_IP_ADDRESS=$1

# Define the list of files to update
FILES=(
    "0-use_a_private_key"
    "1-create_ssh_key_pair"
    "2-ssh_config"
    "../0x0C-web_server/transfer"
    "../0x0C-web_server/server-check"
    "../0x0C-web_server/connect"
)

# Loop through each file and replace IP addresses
for file in "${FILES[@]}"; do
    # Check if the file exists
    if [ -f "$file" ]; then
        # Replace IP addresses with the new one
        sed -i "s/35\.153\.194\.178/$NEW_IP_ADDRESS/g" "$file"
    else
        echo "File not found: $file"
    fi
done

echo "IP addresses replaced with $NEW_IP_ADDRESS in the specified files."
