B#!/usr/bin/env bash
#a Bash script that configures a new Ubuntu machine to respect above requirements (this script will be run on the server itself)

sudo apt-get update
sudo apt-get install -y nginx

# IP Address
ip_address="52.91.137.2"

# Configure nginx to listen on port 80 and return "Hello World!" at root
sudo bash -c "cat > /etc/nginx/sites-available/default" <<EOF
EOF
server {
    listen 80;
    server_name $ip_address;

    location / {
        echo "Hello World!";
    }
}
EOF

# Restart nginx to apply changes
sudo service nginx restart
